<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/padding_edge"
    app:cardElevation="@dimen/padding_edge"
    app:contentPadding="@dimen/padding_edge"
    android:layout_marginEnd="@dimen/padding_edge"
    android:layout_marginStart="@dimen/padding_edge"
    android:layout_marginTop="@dimen/padding_edge_half"
    android:layout_marginBottom="@dimen/padding_edge_half"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgThumb"
            android:layout_width="@dimen/thumb_size"
            android:layout_height="@dimen/thumb_size"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/padding_edge"
            android:layout_marginEnd="@dimen/padding_edge"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imgThumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgThumb"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintEnd_toEndOf="@id/tvName"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_10sdp"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgStatus"
            android:layout_width="@dimen/ic_status_size"
            android:layout_height="@dimen/ic_status_size"
            app:layout_constraintStart_toStartOf="@id/tvName"
            app:layout_constraintBottom_toBottomOf="@id/tvStatus"
            app:layout_constraintTop_toTopOf="@id/tvStatus"
            app:srcCompat="@drawable/ic_status"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/imgStatus"
            app:layout_constraintBottom_toBottomOf="@id/imgThumb"
            android:layout_marginStart="@dimen/padding_edge_half"
            android:text="@string/open"
            android:textSize="@dimen/_10sdp"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/_4sdp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
